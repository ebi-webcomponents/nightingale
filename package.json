{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "prewatch": "npm run bootstrap",
    "build": "lerna exec --ignore nightingale-showcase-app --parallel -- rollup --config ../../rollup.config.js",
    "watch": "lerna exec --ignore nightingale-showcase-app --parallel -- rollup -c ../../rollup.config.js -w",
    "clean": "lerna exec --ignore nightingale-showcase-app --parallel -- rimraf .jshint .eslint",
    "start": "lerna run start --npm-client=yarn --stream",
    "build-site": "lerna run build-site --npm-client=yarn --stream",
    "test": ""
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-external-helpers": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@webcomponents/webcomponentsjs": "^2.1.3",
    "babel-loader": "^8.0.4",
    "babel-plugin-transform-custom-element-classes": "^0.1.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.26.3",
    "camelcase": "^5.0.0",
    "eslint": "^4.12.0",
    "postcss-inline-svg": "^3.1.1",
    "lerna": "^3.3.2",
    "rollup": "^0.65.2",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.1.6",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-postcss": "^1.6.2"
  }
